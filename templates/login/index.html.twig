{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1 class="text-center">Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="d-flex justify-content-center text-center login">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group" style="margin-bottom: 1rem">
                <h3><label for="username">Email:</label></h3>
                <input type="email" class="form-control" name="_username" id="username" aria-describedby="emailHelp" value="{{ last_username }}">
            </div>

            <div class="form-group" style="margin-bottom: 1rem">
                <h3><label for="password">Password:</label></h3>
                <input type="password" class="form-control" name="_password"  id="password" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
{% endblock %}
