{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center">User</h1>

    <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.Prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.Adresse }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container">
        <a href="{{ path('user_index') }}" class="btn btn-primary">back to list</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">edit</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
