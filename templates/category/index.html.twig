{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="text-center">Category index</h1>

    <table class="table container">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de Category Enregistrer</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="container">
        <a href="{{ path('category_new') }}" class="btn btn-primary">New Produit</a>
    </div>
{% endblock %}