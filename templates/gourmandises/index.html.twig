{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

  {#! Macarons #}
  <p class="text-center h1">{{controller_macaron}}</p>

  <div class="container mx-auto mt-3">
    <div class="row">
    {% for macaron in macarons %}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <img src="uploads/{{macaron.Image}}" class="card-img-top" alt="...">
          
          <div class="card-body">
            <h5 class="card-title">{{macaron.nom}}</h5>
            <p class="card-text">{{macaron.prix}}</p>
          </div>
        </div>
      </div> 
    {% endfor %}
    </div> 
  </div> 

  {#! Chocolats #}
  <p class="text-center h1">{{controller_chocolat}}</p>

  <div class="container mx-auto mt-3">
    <div class="row">
    {% for chocolat in chocolats %}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <img src="uploads/{{chocolat.Image}}" class="card-img-top" alt="...">
          
          <div class="card-body">
            <h5 class="card-title">{{chocolat.nom}}</h5>
            <p class="card-text">{{chocolat.prix}}</p>
          </div>
        </div>
      </div> 
    {% endfor %}
    </div> 
  </div> 

  {#! Confiseries #}
  <p class="text-center h1">{{controller_confiserie}}</p>

  <div class="container mx-auto mt-3">
    <div class="row">
    {% for confiserie in confiseries %}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <img src="uploads/{{confiserie.Image}}" class="card-img-top" alt="...">
          
          <div class="card-body">
            <h5 class="card-title">{{confiserie.nom}}</h5>
            <p class="card-text">{{confiserie.prix}}</p>
          </div>
        </div>
      </div> 
    {% endfor %}
    </div> 
  </div> 


{% endblock %}
