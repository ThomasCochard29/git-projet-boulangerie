{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1 class="text-center">Produit</h1>

    <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.Nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{asset('/uploads/'~produit.Image)}}" alt="" width="100%"></td>
            </tr>
        </tbody>
    </table>

    <div class="container">
        <a href="{{ path('produit_index') }}" class="btn btn-primary">Liste des Produits</a>
        <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('produit/_delete_form.html.twig') }} 
    </div>

{% endblock %}
